<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Username: "
                android:textSize="18sp"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvUsernameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Narendra Gumma "
                android:textSize="18sp"
                android:layout_toRightOf="@+id/tvUsername"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id: "
                android:textSize="18sp"
                android:layout_below="@+id/tvUsername"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/tvId"
                android:layout_below="@+id/tvUsernameValue"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D/O: "
                android:textSize="18sp"
                android:layout_below="@+id/tvId"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvDoval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balaiah Gumma"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/tvDo"
                android:layout_below="@+id/tvIdValue"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvgrpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Name: "
                android:textSize="18sp"
                android:layout_below="@+id/tvDo"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvgrpNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LVPYouth"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/tvgrpName"
                android:layout_below="@+id/tvDoval"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvvlgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Village Name: "
                android:textSize="18sp"
                android:layout_below="@+id/tvgrpName"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvvlgNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV Palli"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/tvvlgName"
                android:layout_below="@+id/tvgrpNameValue"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

